<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".TicketActivity">


    <com.robinhood.ticker.TickerView
        android:id="@+id/textTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="27dp"



        android:textColor="#F8B249"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonTicketGen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTicketGen"
        android:layout_width="214dp"
        android:layout_height="46dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/button"
        android:text="Genarate Ticket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTicket" />

</androidx.constraintlayout.widget.ConstraintLayout>
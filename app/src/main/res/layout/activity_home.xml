<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:translationX="-280dp"
        android:id="@+id/homeLinearLayout"
        android:layout_width="280dp"
        android:layout_height="match_parent"

        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        >


          <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/navNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Md Sahadat Hossain"
            android:textColor="#FBFAFA"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/navPlaceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:text="Narsingdi"
            android:textColor="#FBFAFA"
            android:textSize="16sp" />

        <Button
            android:id="@+id/navMenuButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bigbutton"
            android:text="Your Tickets"
            android:textAllCaps="false"
            android:textColor="#FBFAFA"
            android:textSize="18sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/navMenuButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bigbutton"

            android:text="Buy Tickets"
            android:textAllCaps="false"
            android:textColor="#4958A3"
            android:textSize="18sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/navMenuButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bigbutton"
            android:text="Settings"
            android:textAllCaps="false"
            android:textColor="#4958A3"
            android:textSize="18sp"
            android:textStyle="normal" />
        <Button
            android:id="@+id/navMenuButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bigbutton"
            android:text="Sign Out"
            android:textAllCaps="false"
            android:textColor="#4958A3"
            android:textSize="18sp"
            android:textStyle="normal" />


    </LinearLayout>

 <RelativeLayout
     android:translationX="-280dp"
     android:layout_width="416dp"
     android:layout_height="match_parent"
     android:id="@+id/homeRelativeLayout">


         <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/profile_image2"
         android:layout_width="91dp"
         android:layout_height="62dp"

         android:layout_marginTop="10dp"
         android:scaleType="centerCrop"
         android:src="@drawable/profile"
         app:civ_border_color="#FF000000"
         app:civ_border_width="2dp" />



     <TextView
         android:id="@+id/nameTextView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentEnd="true"
         android:layout_gravity="center"
         android:layout_marginTop="16dp"
         android:layout_marginEnd="91dp"
         android:text="Md Sahadat Hossain"
         android:textColor="#090808"
         android:textSize="20sp" />

     <TextView
         android:id="@+id/placeTextView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_alignParentEnd="true"

         android:layout_gravity="center"
         android:layout_marginTop="42dp"
         android:layout_marginEnd="148dp"
         android:text="Narsingdi"
         android:textColor="#0C0A0A"
         android:textSize="16sp" />



 </RelativeLayout>


</LinearLayout>